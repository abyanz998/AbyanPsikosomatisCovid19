<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#448985"
    tools:context=".Menu">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="200dp"
        app:cardBackgroundColor="#c4dedc">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_psiko"
                    android:clickable="true"
                    android:layout_width="180dp"
                    android:layout_height="220dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="160dp"
                        android:src="@drawable/faq"
                        android:layout_marginTop="-30dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:layout_marginLeft="12dp"
                        android:text="Psikosomatis"
                        android:textSize="25dp"
                        android:textColor="#448985"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_tes"
                android:clickable="true"
                android:layout_width="180dp"
                android:layout_height="220dp"
                android:layout_marginLeft="25dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tes"
                    android:layout_marginTop="-30dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Mulai Tes"
                    android:textSize="25dp"
                    android:textColor="#448985"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_logout"
                    android:clickable="true"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="300dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="40dp"
                            android:text="Keluar Akun"
                            android:textSize="28dp"
                            android:textColor="#448985"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:text="Untuk keluar dari akun anda"
                            android:textSize="16dp"
                            android:textColor="#448985"/>

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:text="Nama anda"
                            android:textSize="16dp"
                            android:textColor="#448985"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/logout"
                        android:layout_gravity="center"
                        android:layout_marginLeft="120dp"/>
                </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</LinearLayout>