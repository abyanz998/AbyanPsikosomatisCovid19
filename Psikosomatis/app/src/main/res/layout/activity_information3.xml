<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Information3">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/hp"
        android:layout_gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#448985">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="Oleh karena itu, dibuatlah aplikasi berbasis android sebagai langkah untuk menekan angka kecemasan di tengah pandemi yang sedang terjadi saat ini."
            android:textSize="16dp"
            android:fontFamily="@font/fredoka_one"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal"/>
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="200dp">
            <TextView
                android:id="@+id/btn_start"
                android:clickable="true"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Ayo Mulai"
                android:textSize="20dp"
                android:textColor="#448985"
                android:textStyle="bold"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</LinearLayout>