<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".hasil">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="-30dp"
        app:cardBackgroundColor="#448985"
        app:cardCornerRadius="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/idd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="NAMA ANDA"
                android:textColor="#c4dedc"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:width="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#c4dedc"
                    android:gravity="center"
                    android:text="ANDA "
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/tampilskor"
                    android:width="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_column="2"
                    android:textColor="#c4dedc"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="HASIL SKOR"/>
            </LinearLayout>
            <TextView
                android:width="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_column="2"
                android:textColor="#c4dedc"
                android:gravity="center"
                android:text=" TERDETEKSI PSIKOSOMATIS " />
            <TextView
                android:id="@+id/tampilkategor"
                android:width="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:textColor="#c4dedc"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="TIPE PSIKOSOMATIS"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:width="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:text="BAGAIMANA PUN JUGA PSIKOSOMATIS DAPAT MENURUNKAN IMUNITAS ANDA, yuk cek solusinya dibawah ini"
        android:layout_gravity="center"
        android:textColor="#448985"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/solusi"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="CEK SOLUSI DISINI"
        android:textColor="#FFFFFF"
        android:background="#448985"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>
</LinearLayout>