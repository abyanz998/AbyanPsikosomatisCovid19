<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Pertanyaan3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pertanyaan"
        android:textSize="30dp"
        android:textColor="#448985"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="218dp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/pertanyaan"/>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_marginTop="-30dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#448985">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:text="Apakah setelah mendapatkan informasi terkait wabah COVID-19 Anda merasakan peningkatan emosi negatif ? *seperti kesedihan, rasa takut, terkejut dsb"/>
            <RadioGroup
                android:id="@+id/rg_soal7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_ya1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="#FFFFFF"
                        android:text="Ya" />
                    <RadioButton
                        android:id="@+id/rb_tidak1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="50dp"
                        android:text="Tidak" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:text="Selama 24 jam terakhir apakah Anda mudah melampiaskan perasaan negatif kepada orang disekitar Anda? *seperti ketika marah Anda mudah menghina orang, ketika takut Anda akan menghindar bertemu orang lain dsb"/>
            <RadioGroup
                android:id="@+id/rg_soal8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_ya2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="#FFFFFF"
                        android:text="Ya" />
                    <RadioButton
                        android:id="@+id/rb_tidak2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="50dp"
                        android:text="Tidak" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:text="Selama 24 jam terakhir apakah Anda mampu mengendalikan diri anda untuk mengekspresikan emosi negatif dengan baik ? *seperti tidak mudah sedih, tidak mudah marah, tidak mudah was was dsb"/>
            <RadioGroup
                android:id="@+id/rg_soal9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_ya3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="#FFFFFF"
                        android:text="Ya" />
                    <RadioButton
                        android:id="@+id/rb_tidak3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textColor="#FFFFFF"
                        android:text="Tidak" />

            </RadioGroup>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp">
                <TextView
                    android:id="@+id/btn_next"
                    android:clickable="true"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="Selanjutnya"
                    android:textSize="20dp"
                    android:textColor="#448985"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>